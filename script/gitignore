#!/bin/sh
set -e
for dir in example/* test/*; do (
    if [ ! -d $dir ]; then
        continue
    fi
    echo "* $dir"
    cd $dir
    rm -rf .gitignore
    echo "# file generated by '$0'; do not edit" >> .gitignore
    for file in `ls *.cpp`; do
        stem=`echo $file | sed 's/.cpp$//g'`
        echo /$stem >> .gitignore
    done
) done
